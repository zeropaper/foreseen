{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/zeropaper/foreseen/src/schema.json",
  "title": "Foreseen document",
  "description": "Foreseen description of a ThreeJS scene, renderers, cameras, lights, materials, objects, etc.",
  "type": "object",
  "$defs": {
    "instruction": {
      "type": "string",
      "pattern": "[^\n]*"
    },
    "vector2": {
      "description": "https://threejs.org/docs/index.html?q=vector#api/en/math/Vector2",
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "x": {
              "type": "number",
              "default": 0
            },
            "y": {
              "type": "number",
              "default": 0
            }
          }
        },
        {
          "type": "array",
          "minItems": 2,
          "maxItems": 2,
          "items": {
            "type": "number",
            "default": 0
          }
        }
      ]
    },
    "vector3": {
      "description": "https://threejs.org/docs/index.html?q=vector#api/en/math/Vector3",
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "x": {
              "type": "number",
              "default": 0
            },
            "y": {
              "type": "number",
              "default": 0
            },
            "z": {
              "type": "number",
              "default": 0
            }
          }
        },
        {
          "type": "array",
          "minItems": 3,
          "maxItems": 3,
          "items": {
            "type": "number"
          }
        }
      ]
    },
    "vector4": {
      "description": "https://threejs.org/docs/index.html?q=vector#api/en/math/Vector4",
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "x": {
              "type": "number",
              "default": 0
            },
            "y": {
              "type": "number",
              "default": 0
            },
            "z": {
              "type": "number",
              "default": 0
            },
            "w": {
              "type": "number",
              "default": 1
            }
          }
        },
        {
          "type": "array",
          "minItems": 4,
          "maxItems": 4,
          "default": [
            0,
            0,
            0,
            1
          ],
          "items": {
            "type": "number"
          }
        }
      ]
    },
    "position": {
      "description": "Relative position to the parent object, if applicable, or scene",
      "$ref": "#/$defs/vector3"
    },
    "rotation": {
      "description": "Relative rotation to the parent object, if applicable, or scene",
      "$ref": "#/$defs/vector3"
    },
    "scale": {
      "description": "Relative scale to the parent object, if applicable, or scene",
      "$ref": "#/$defs/vector3"
    },
    "renderer": {
      "type": "object"
    },
    "material": {
      "type": "object"
    },
    "object": {
      "type": "object",
      "properties": {
        "position": {
          "$ref": "#/$defs/position"
        },
        "rotation": {
          "$ref": "#/$defs/rotation"
        },
        "scale": {
          "$ref": "#/$defs/scale"
        }
      }
    },
    "camera": {
      "type": "object",
      "allOf": [
        {
          "type": "object",
          "$ref": "#/$defs/object"
        },
        {
          "type": "object",
          "properties": {}
        }
      ]
    },
    "light": {
      "type": "object",
      "allOf": [
        {
          "type": "object",
          "$ref": "#/$defs/object"
        },
        {
          "type": "object",
          "properties": {}
        }
      ]
    },
    "mesh": {
      "type": "object",
      "allOf": [
        {
          "type": "object",
          "$ref": "#/$defs/object"
        },
        {
          "type": "object",
          "properties": {}
        }
      ]
    }
  },
  "required": [
    "meshes"
  ],
  "properties": {
    "title": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "resetOnChange": {
      "type": "boolean",
      "default": false
    },
    "renderers": {
      "type": "object",
      "patternProperties": {
        "[a-z]+": {
          "$ref": "#/$defs/renderer"
        }
      }
    },
    "cameras": {
      "type": "object",
      "patternProperties": {
        "[a-z]+": {
          "$ref": "#/$defs/camera"
        }
      }
    },
    "lights": {
      "type": "object",
      "patternProperties": {
        "[a-z]+": {
          "$ref": "#/$defs/light"
        }
      }
    },
    "materials": {
      "type": "object",
      "patternProperties": {
        "[a-z]+": {
          "$ref": "#/$defs/material"
        }
      }
    },
    "meshes": {
      "type": "object",
      "patternProperties": {
        "[a-z]+": {
          "$ref": "#/$defs/mesh"
        }
      }
    },
    "setup": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/instruction"
      }
    }
  }
}